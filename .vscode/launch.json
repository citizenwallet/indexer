  "version": "0.2.0",
  "configurations": [

    {
      "name": "Launch Node",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/node/main.go",
      "args": [
        "-env",
        "../../.env",
        "-rate",
        "99",
        "-sync",
        "1",
        "-fbpath",
        "../../firebase.json",
        "-dbpath",
        "../../"
      ]
    },
    {
      "name": "Launch Node [CELO]",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/node/main.go",
      "args": [
        "-env",
        "../../.env",
        "-rate",
        "99",
        "-sync",
        "1",
        "-fbpath",
        "../../firebase.json",
        "-evm",
        "celo",
        "-dbpath",
        "../../"
      ]
    },
    {
      "name": "Launch WS Node [CELO]",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/node/main.go",
      "args": [
        "-env",
        "../../.env",
        "-fbpath",
        "../../firebase.json",
        "-evm",
        "celo",
        "-dbpath",
        "../../",
        "-ws"
      ]
    },
    {
      "name": "Launch WS Node [GNOSIS]",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/node/main.go",
      "args": [
        "-env",
        "../../.env",
        "-fbpath",
        "../../firebase.json",
        "-dbpath",
        "../../data/gnosis",
        "-ws"
      ]
    },
    {
      "name": "Launch API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/node/main.go",
      "args": [
        "-env",
        "../../.env",
        "-rate",
        "99",
        "-sync",
        "1",
        "-onlyApi",
        "-fbpath",
        "../../firebase.json",
        "-dbpath",
        "../../"
      ]
    }
  ]
}
